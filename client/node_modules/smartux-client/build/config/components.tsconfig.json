{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2015",
    "baseUrl": "./src",
    "preserveSymlinks": true
  },
  "include": [
    "node_modules/components/**/*.ts",
    "node_modules/custom-components/**/*.ts"
  ],
  "exclude": [
  ],
  "compileOnSave": false
}
